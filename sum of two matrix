# include <stdio.h>
int main() 
 {
 int a[3][4], b[3][4], c[3][4], i, j, sum=0;
 
 printf("\nEnter elements of 1 matrix");
 
 for(i=0; i<3; i++)
 {
 for(j=0; j<4; j++)
   {
     scanf("%d", &a[i][j]);
     
   }
 }
 
 printf("\nEnter elements of 2 matrix");
 
 for(i=0; i<3; i++)
 {
 for(j=0; j<4; j++)
   {
     scanf("%d", &b[i][j]);
     
   }
 }
 
 
 printf("Sum of both matrix is\n ");
 
 for(i=0; i<3; i++)
 {
 for(j=0; j<4; j++)
   {
       c[i][j]=a[i][j]+b[i][j];
       
     printf("\t%d", c[i][j]);
   }
   printf("\n");
 } 
 
 return 0;
 }
